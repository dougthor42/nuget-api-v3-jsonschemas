        "dependency": {
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "range": { "$ref": "#/definitions/version_range" },
                "registration": { "type": "string" }
            },
            "required": [ "id" ]
        },

        "dependency_group": {
            "type": "object",
            "properties": {
                "targetFramework": { "type": "string" },
                "dependencies": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/dependency" }
                }
            }
        },

        "catalog_entry": {
            "type": "object",
            "properties": {
                "@id": { "type": "string" },
                "authors": { "$ref": "#/definitions/str_or_array_of_str" },
